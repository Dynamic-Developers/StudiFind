<body>
<h2>Place your Ad</h2>

<div class="container" >
  <form action="/action_page.php">
  <div class="row">
      <div class="col-25">
        <label for="category">Item Category</label>
      </div>
      <div class="col-75">
        <select id="category" name="category">
          <option value="australia">Books</option>
          <option value="canada">Electronics</option>
          <option value="usa">Clothes</option>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="title">Title</label>
      </div>
      <div class="col-75">
        <input type="text" id="title" name="title" placeholder="Item name..">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="description">Description</label>
      </div>
      <div class="col-75">
        <textarea id="description" name="description" placeholder="Description of product..." style = "height: 150px"></textarea>
      </div>
    </div>
     <div class="row">
      <div class="col-25">
        <label for="price">Price</label>
      </div>
      <div class="col-75">
        <input type="text" id="price" name="price" placeholder="E.g. â‚¬50">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="county">County</label>
      </div>
      <div class="col-75">
        <select id="county" name="county">
          <option value="">Galway</option>
          <option value="">Mayo</option>
          <option value="">Sligo</option>
           <option value="">Dublin</option>
        </select>
      </div>
    </div>
     <div class="row">
      <div class="col-25">
        <label for="photo">Upload Photo</label>
      </div>
      <div class="col-75">
        <input type="file" name="pic" accept="image/*">
      </div>
    </div>
     <div class="row">
      <input type="submit" value="Submit">
    </div>
     
  </form>
</div>
</body>
</html>

