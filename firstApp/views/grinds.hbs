    <style>
        td{
            padding:0 100px 0 5px;
        }
}
    </style>
</head>
<body>

<tr><td><br /></td></tr>
    <tr><td><br /></td></tr>
	<tr><td><br /></td></tr>
    

<input type="text" id="myInput" align:"middle"
	onkeyup="myFunction()" placeholder="Search..." title="Type in a product" style="width: 100%; height:40px">

  <table id = "mytable">
      <tr><td><br /></td></tr>
  <tr>
      <th>Title</th> 
    <th>Description</th> 
      <th>Price</th> 
      <th>Email</th> 
      <th>County</th> 
      </tr>
{{#each contact}}
       {{#ifEquals category "grinds"}}
    <tr>
        
       <tr><td><br /></td></tr>
    
        
  
    <tr>
      <td><div class="title" style="font-size: 20px">{{title}}</div></td>
        <td><div class="description">{{description}}</div> </td>
        
       
          
       
       <td> <div class="price">{{price}}</div> </td>
       
       
       
       
       <td> <div class="price">{{contactEmail}}</div> </td>
       
           
        <td><div class="county">{{county}}</div></td>
        
        
        <td><div class="image"><img src={{image}}></div>
       </tr>
   
 
         <tr><td><br /></td></tr>
	
    
       
       {{/ifEquals}}
         
     
     
{{/each}}

    </table>

	
	
                     

					 
<script>
function myFunction() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("mytable");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[0];
    if (td) {
      if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }       
  }
}
</script>

    </body>
